
<div class="modal fade" id="new-listing-modal" tabindex="-1" role="dialog" aria-labelledby="newListingModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="newListingModalLabel">List Your Space</h4>
            </div>
            <form action="api/businesses" method="post" id="new-listing-form" class="form-inline" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class='errors alert alert-danger' role="alert"></div>
                    <div class="form-group">
                        <input 
                        type='text' 
                        class='form-control' 
                        id='name'
                        name='name'
                        placeholder="Title"
                        autofocus='true'>
                        <br><br>
                        <input 
                        type='text' 
                        class='form-control' 
                        id='location' 
                        name='location'
                        placeholder="Location">
                        <br><br>
                		<select class='form-control' id='category' name='category'>
                            <option value='Mansion/Penthouse'>Mansion/Penthouse</option>
                            <option value='Private Room'>Private Room</option>
                            <option value='Shack/Hovel'>Shack/Hovel</option>  
                        </select>
                        <br><br>
                        <input
                        type="number"
                        class='form-control'
                        id='price_range'
                        name='price_range'
                        placeholder="How much per night?">
                        <br><br>
                        <textarea
                        class='form-control'
                        id='description'
                        name='description'
                        placeholder="Please describe your space."></textarea>
                        <br><br>
                        Upload a Photo!<br>
                        <input type="file" class="form-control" name="avatar" id="avatar">
                    </div>
            
                </div>
                <div class="modal-footer">
                    <button 
                        type="submit" 
                        class="btn btn-default btn-success" 
                        id='submit-button'>
                        Create Listing
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>