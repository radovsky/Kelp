<!DOCTYPE html>
<html>
<head>

	<meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
	<script type="text/javascript"
		src="https://maps.googleapis.com/maps/api/js?key=<%= 
			ENV['GOOGLE_API_KEY'] 
		%>">
	</script>
	<script type="text/javascript">
	function initialize() {
		var mapOptions = {
			center: new google.maps.LatLng(37.775, -122.419),
			zoom: 11,
			disableDefaultUI: true
		};
		var map = new google.maps.Map(document.getElementById("map-canvas"),
		mapOptions);

		var marker = new google.maps.Marker({
			position: new google.maps.LatLng(37.775, -122.419),
			map: map,
			title:"Hello World!"
		});
	}

	google.maps.event.addDomListener(window, 'load', initialize);
	</script>

	<title>Kelp</title>
	<%= favicon_link_tag 'favicon.ico' %>
	<%= stylesheet_link_tag 'application' %>
	<%= javascript_include_tag 'application' %>
	<%= csrf_meta_tags %>
	<%= flash[:errors].join("<br>") if flash[:errors] %>
</head>

<body>

	<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
		
		<div class="navbar-over-map">
			<div class="top"></div>
			<div class="right"></div>
			<div class="bottom"></div>
			<div class="left"></div>
			<div class="all"></div>
		</div>
		
		
		
		<div class="containter-fluid">
			<div class="navbar-header">
				<button type="button"
					class="navbar-toggle"
					data-toggle="collapse"
					data-target="#bs-example-navbar-collapse-1">

					<span class="sr-only">Toggle Navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="#">
					laissez-fairebnb
				</a>
			</div>

			<div
				class="collapse navbar-collapse"
				id="bs-example-navbar-collapse-1">

				<ul class="nav navbar-nav">
					<li class="active">
						<a href="http://lnkd.in/2yiksZ">Home</a>
					</li>
					<li class="active">
						<a href="http://lnkd.in/2yiksZ">About</a>
					</li>
					<li class="active">
						<a href="http://lnkd.in/2yiksZ">Contact</a>
					</li>
				</ul>

				<ul class="nav navbar-nav navbar-right">
					<li class="dropdown">
						<a
							href="#"
							class="dropdown-toggle"
							data-toggle="dropdown">
							<%= signed_in? ? "Account" : "Sign in" %>
							<span class="caret"></span>
						</a>
						<ul class="dropdown-menu" role="menu">
							<li class="divider"></li>
							<% if signed_in? %>

							<li>
								<%= current_user.username %>
							</li>
							<li>
								<%=link_to "Sign Out",
								session_url,
								:method => :delete %>
							</li>

							<% else %>

							<li><%= link_to "Sign In", new_session_url %> </li>
							<li><%= link_to "Sign up", new_user_url %> </li>
							<% end %>
						</ul>
					</ul>   
				</div>
			</div>
		</div>
	</nav>

	<div id='main-content'>
		<%= yield %>
	</div>

</body>
</html>
